{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        "semi": "error",
        "quotes": [ "error", "double" ],
        "eol-last": [ "error", "always" ],
        "default-case": "off",
        "indent": [ "error", 4, { "SwitchCase": 1 } ]
    },
    "overrides": [{
        "files": [ "./src/hooks/useTransition.js", "./src/components/Tabs.jsx" ],
        "rules": {
            "react-hooks/exhaustive-deps": "off"
        }
    }]
}
